@model NewMVC.Models2.TestOne

<form method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        @Html.Label("YES")
        @Html.RadioButtonFor(model => model.Ethnicity, "YES")
        @Html.Label("NO")
        @Html.RadioButtonFor(model => model.Ethnicity, "NO")
        <span asp-validation-for="Ethnicity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<a class="nav-link" asp-area="" asp-action="/Index">Home</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}





















